# IMAP Configuration (for reading emails)
IMAP_HOST=mail.example.com
IMAP_PORT=993
IMAP_USER=your_email@example.com
IMAP_PASSWORD=your_password
IMAP_TLS=true
IMAP_MAILBOX=INBOX

# JMAP Configuration (for creating draft responses)
JMAP_SESSION_URL=https://api.fastmail.com/jmap/session
JMAP_API_KEY=your_jmap_api_key
# You can provide either JMAP_ACCOUNT_ID or JMAP_EMAIL_ADDRESS
# If using JMAP_EMAIL_ADDRESS, the app will auto-discover your account ID
JMAP_ACCOUNT_ID=your_account_id
JMAP_EMAIL_ADDRESS=your_email@example.com

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key

# App Configuration
KNOWLEDGE_FILE=knowledge.md
# This directory is still used for fallback if JMAP fails
RESPONSES_DIR=responses